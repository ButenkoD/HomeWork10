    <div class="panel panel-success">
        <div class="panel-heading">
            <h3 class="panel-title">
                {{ post.getId() }}
                <a href="{{ path('show_post', {'slug': post.getSlug()}) }}">Show</a>
                <a href="{{ path('delete_post', {'slug': post.getSlug()}) }}">Delete</a>
            </h3>
