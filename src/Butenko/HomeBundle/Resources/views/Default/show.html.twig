            <p>Name: {{ post.getName() }}</p>
            <p>Email: {{ post.getEmail() }}</p>
            <p>Updated: {{ post.getUpdated()| date("d.m.Y G:i") }}</p>
            <p>{{ post.getBody() }}</p>
        </div>
    </div>
{% endblock %}